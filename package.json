{
  "name": "erc20r",
  "version": "1.0.0",
  "description": "",
  "main": "",
  "scripts": {
    "lint": "prettier test/**/* examples/**/* scripts/**/* --check",
    "lint:fix": "prettier test/**/* examples/**/* scripts/**/* --write",
    "format": "prettier --check contracts/**/*.sol examples/**/*.sol",
    "format:fix": "prettier --write contracts/**/*.sol examples/**/*.sol",
    "clean": "hardhat clean",
    "build": "hardhat compile",
    "rebuild": "hardhat clean && hardhat compile",
    "deploy": "hardhat --network localhost run scripts/deploy.ts",
    "goerli:deploy": "hardhat --network goerli run scripts/deploy.ts",
    "goerli:upgrade": "hardhat --network goerli run scripts/upgrade.ts",
    "goerli:verify": "eval $(grep 'CONTRACT_GO=' .env)&& hardhat verify --network goerli --constructor-args scripts/arguments.ts $CONTRACT_GO",
    "goerli:replace": "hardhat --network goerli run scripts/replace.ts",
    "main:deploy": "hardhat --network mainnet run scripts/deploy.ts",
    "main:verify": "eval $(grep 'CONTRACT_MAIN=' .env)&& hardhat verify --network mainnet --constructor-args scripts/arguments.ts $CONTRACT_MAIN",
    "test:gas": "cross-env REPORT_GAS=true hardhat test test/test.ts",
    "test": "hardhat test test/test.ts",
    "test1:gas": "cross-env REPORT_GAS=true hardhat test test/test_v1.ts",
    "test1": "hardhat test test/test_v1.ts",
    "redeploy": "hardhat run scripts/redeploy.ts",
    "node": "hardhat node"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@alch/alchemy-web3": "^1.4.7",
    "@nomiclabs/hardhat-ethers": "^2.2.1",
    "@nomiclabs/hardhat-etherscan": "^3.1.2",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@openzeppelin/contracts": "^4.8.0",
    "@typechain/ethers-v5": "^10.1.1",
    "@typechain/hardhat": "^6.1.4",
    "@types/chai": "^4.3.4",
    "@types/dotenv": "^8.2.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.9",
    "chai": "^4.3.7",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "ethereum-waffle": "^3.4.4",
    "ethers": "^5.7.2",
    "hardhat": "^2.12.2",
    "hardhat-gas-reporter": "^1.0.9",
    "prettier": "^2.7.1",
    "prettier-plugin-solidity": "^1.0.0-beta.13",
    "solidity-coverage": "^0.7.22",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.1",
    "typescript": "^4.8.4"
  }
}
